@model IEnumerable<CinemaProject.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<div class="card p-4">
    <h3>Movie List</h3>
    <p>
        <a asp-area="Admin" asp-controller="Movie" asp-action="Create" class="btn btn-primary btn-sm float-end"><i class="fa fa-plus"></i> Create New</a>
    </p>
    <label class="text-warning">@TempData["Message"]</label>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price) (₺)

                </th>

                <th>Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.Image" class="rounded" width="60px">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Price) ₺
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
